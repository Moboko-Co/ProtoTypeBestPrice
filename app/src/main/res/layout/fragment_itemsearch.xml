<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
    <ImageButton
        android:id="@+id/itemSearchImageButton"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5.8"/>

    <ImageButton
        android:id="@+id/barCodeImageButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/ic_barcode"/>

    </LinearLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/searchViewTabs"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <androidx.viewpager.widget.ViewPager
        android:layout_below="@id/searchViewTabs"
        android:id="@+id/searchViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</LinearLayout>